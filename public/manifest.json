{
  "name": "Upvote - Reddit comments on YouTube/webpages",
  "description": "View Reddit comments on YouTube or any webpage.",
  "version": "2.2.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo_16.png",
      "32": "images/logo_32.png",
      "48": "images/logo_48.png",
      "128": "images/logo_128.png"
    }
  },
  "icons": {
    "16": "images/logo_16.png",
    "32": "images/logo_32.png",
    "48": "images/logo_48.png",
    "128": "images/logo_128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "images/youtube_32.png",
        "images/reddit_32.png"
      ],
      "matches": [
        "*://*.youtube.com/*"
      ],
      "extension_ids": []
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "host_permissions": [
    "*://*.reddit.com/*"
  ]
}